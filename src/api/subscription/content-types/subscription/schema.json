{
  "kind": "collectionType",
  "collectionName": "subscriptions",
  "info": {
    "singularName": "subscription",
    "pluralName": "subscriptions",
    "displayName": "Subscription"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "company": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::company.company",
      "mappedBy": "subscription"
    },
    "stripeSubscriptionId": {
      "type": "string",
      "required": false
    },
    "stripePriceId": {
      "type": "string",
      "required": false
    },
    "plan": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::plan.plan",
      "inversedBy": "subscriptions"
    },
    "subscriptionStatus": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "active",
        "past_due",
        "unpaid",
        "canceled",
        "incomplete",
        "incomplete_expired"
      ]
    },
    "currentPeriodStart": {
      "type": "date",
      "required": true
    },
    "currentPeriodEnd": {
      "type": "date",
      "required": false
    },
    "cancelAtPeriodEnd": {
      "type": "boolean",
      "required": true
    },
    "trialEndsAt": {
      "type": "date"
    }
  }
}
